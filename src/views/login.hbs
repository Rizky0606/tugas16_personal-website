<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="./../style/blog.css" />
    <!-- fontawesome -->
    <script
      src="https://kit.fontawesome.com/2d2e41954d.js"
      crossorigin="anonymous"
    ></script>
    <!-- google fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;700&display=swap"
      rel="stylesheet"
    />
    <!-- bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
    <style>
      * { font-family: Poppins; }
    </style>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid ms-5">
          <img
            src="https://dumbways.id/assets/images/brandred.png"
            alt="Logo Dumbways"
            style="height: 30px; width: 30px"
          />
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a
                  class="nav-link"
                  aria-current="page"
                  href="/testimonial"
                >Testimonials</a>
              </li>
            </ul>
            <div class="d-flex justify-content-end">
              <ul class="navbar-nav me-auto mb-2 ms-5 mb-lg-0">
                {{#if isLogin}}
                  <li class="nav-item">
                    <a
                      class="nav-link text-danger active fw-semibold"
                      href="#"
                    >Hello, {{user}}</a>
                  </li>
                  <li class="nav-item ms-3">
                    <a class="nav-link" href="/logout">Logout</a>
                  </li>
                {{else}}
                  <li class="nav-item">
                    <a class="nav-link" href="/register">Register</a>
                  </li>
                  <li class="nav-item ms-3">
                    <a
                      class="nav-link fw-bold active text-danger"
                      href="/login"
                    >Login</a>
                  </li>
                {{/if}}
              </ul>
              <a class="btn btn-danger btn-submit ms-5" href="/contact">Contact
                Me</a>
            </div>
          </div>
        </div>
      </nav>
    </header>

    {{#if messages.danger}}
      <div class="alert alert-danger" role="alert">
        <div class="container">
          {{messages.danger}}
        </div>
      </div>
    {{/if}}

    {{#if messages.succes}}
      <div class="alert alert-success" role="alert">
        <div class="container">
          {{messages.succes}}
        </div>
      </div>
    {{/if}}

    <main>
      <div class="form-project">
        <form method="post" action="/login">
          <h1 align="center">Login</h1>
          <div class="m-5">

            <div class="mb-3">
              <label for="inputEmail" class="form-label">Email</label>
              <input
                type="email"
                name="inputEmail"
                class="form-control"
                id="inputEmail"
              />
            </div>

            <div class="mb-3">
              <label for="inputPassword" class="form-label">Password</label>
              <input
                type="password"
                name="inputPassword"
                class="form-control"
                id="inputPassword"
              />
            </div>

            <div class="d-flex justify-content-end mt-4">
              <button type="submit" class="btn btn-dark">Sumbit</button>
            </div>
          </div>

        </form>
      </div>

    </main>

    <script src="js/blog.js"></script>
    <script src="js/index.js"></script>
  </body>
</html>